<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tenantId"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="@string/hawkular"
                android:layout_height="wrap_content"
                android:id="@+id/et_tenant_id"
                android:imeOptions="flagNoExtractUi"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/id"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/et_id"
                android:imeOptions="flagNoExtractUi"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/name"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:imeOptions="flagNoExtractUi" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/type"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/typeSpinner"
                android:entries="@array/typeEntries"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/eventType"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/eventTypeSpinner"
                android:entries="@array/eventTypeEntries"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/severity"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/severitySpinner"
                android:entries="@array/severityEntries"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/autoDisable"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:id="@+id/switch_autoDisable"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/autoEnable"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:id="@+id/switch_autoEnable"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/autoResolve"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:id="@+id/switch_autoResolve"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/enabled"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:id="@+id/switch_enabled"
                />

        </TableRow>


    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Submit"
        android:layout_marginBottom="20dp"
        android:id="@+id/button_submit"/>

</LinearLayout>

</android.support.v4.widget.NestedScrollView>